<h1>Edit Tenant</h1>

<%= form_with model: @tenant, local: true do |form| %>
  <div class="form-group">
    <%= form.label :membership_expiration %>
    <%= form.datetime_select :membership_expiration %>
  </div>

  <div class="form-group">
    <%= form.label :test_limit %>
    <%= form.number_field :test_limit, min: 0 %> <!-- Restricting test limit to 0 or greater -->
  </div>

  <div class="form-group">
    <%= form.submit "Update Tenant", class: "btn btn-primary" %>
  </div>
<% end %>

<h2>License Keys</h2>

<% if @license_keys.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Activation Code</th>
        <th>Email</th>
        <th>Created At</th>
      </tr>
    </thead>
    <tbody>
      <% @license_keys.each do |key| %>
        <tr>
          <td><%= key.activation_code %></td>
          <td><%= key.email %></td>
          <td><%= key.created_at.strftime('%m/%d/%Y %I:%M %p') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No license keys found for this tenant.</p>
<% end %>
