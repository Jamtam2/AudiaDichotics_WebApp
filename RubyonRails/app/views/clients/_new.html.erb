<h1>New User</h1>

<%= bootstrap_form_with model: @user do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.date_field :date_of_birth, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :mgmt_ref, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.select :gender, ['Male', 'Female', 'Other'], {}, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.text_field :address1, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :country, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :state, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :city, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :zip, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :phone1, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :phone2, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-12">
    </div>

<h2>Emergency Contact Info</h2>
  </div>

  <div class="col-md-6">
    <%= f.fields_for :emergency_contacts do |ec| %>
      <div class="form-group">
        <%= ec.text_field :first_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= ec.text_field :last_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= ec.text_field :phone, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= ec.text_field :address, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= ec.text_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= ec.text_field :city, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= ec.text_field :state, class: "form-control" %>
      </div>
    <% end %>
  </div>

  <%= f.submit "Save" %>
<% end %>
