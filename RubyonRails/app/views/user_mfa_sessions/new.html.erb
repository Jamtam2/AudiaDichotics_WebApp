<%# views/user_mfa_sessions/new.html.erb %>
<style>
  .panel {
    height: 100%;
    width: 50%;
    position: fixed;
    z-index: 1;
    top: 0;
    overflow-x: hidden;
    padding-top: 20px;
}

.left {
    left: 0;
    
}

.right {
    right: 0;
    background-color: rgba(46,131,204,1);
    color: white;
}

.blue-background {
    background-color: rgba(46,131,204,1);
}

.center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    width: 100%;
}

.submit-button {
    background-color: #e0202c;
}

.submit-button:hover {
    background-color: #bd1a25;
}

.logo {
    position: absolute;
    top: 30px; 
    left: 30px; 
    z-index: 2;
}

.logo-image {
    width: 150px; 
    height: auto;
}

.logo-background {
    background-color: white;
    border-radius: 20%;
}

.label-medium {
    font-size: 25px;
}

.forgot-padding {
    padding-bottom: 15px;
}

a.forgot-password {
    font-size: 20px;
    text-decoration: underline;
    color: #e0202c;
}

a.forgot-password:hover {
    color: #bd1a25;
}

.label-small {
    font-size: 20px;
    margin-top: 8px;
}

.checkbox-padding {
    margin: 10px;
    margin-bottom: 12px;
}

.flash-messages {
    position: relative;
    z-index: 100;
    padding: 0px;
    margin: 0px;
}

.alert-success {
    border: none;
}

.terms-of-service {
    display: flex;
    justify-content: center;
    gap: 10px;
}

#tos-checkbox {
    align-self: center;
    margin-bottom: 18px;
}

.btn-link2 {
    color: #e0202c;
    text-decoration: underline;
}

.btn-link2:hover {
    color: #bd1a25;
    text-decoration: underline;
}

.simplified {
    text-align: center;
    display: inline-block;
    font-weight: 300;
    vertical-align: middle;
    padding: 0.375rem 0.5rem;
    line-height: 1.5;
    background: none;
}

.simplified:hover {
    background-color: inherit;
}

.rounded-corner {
    border-radius: 5%;
}

.text-padding {
    padding-top: 5%;
    padding-bottom: 5%;
}

.center-align {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 30%;
}

.back-arrow {
    width: 50px;
    height: auto;
}
</style>

<body class="blue-background" style="overflow-y: auto; min-height: 100vh; display: flex; flex-direction: column; justify-content: center;">
  
  <div class="container p-5 bg-white rounded-corner center-align" style="text-align: center; max-height: 90vh; overflow-y: auto;">
    <div class="logo">
      <%= link_to destroy_user_session_path, method: :delete do %>
        <%= image_tag "back_arrow.svg", class: "back-arrow" %>
      <% end %>
    </div>
    
    <div class="d-flex justify-content-center">
      <%= image_tag 'AudiaShield1.png', style: "margin: 0 auto; width: 125px " %>
    </div>
    
    <h3 class="label-medium text-padding" style="font-weight: bold;">Authenticate Your Account</h3>
    <p class="d-flex justify-content-center" style="text-align: center; padding-bottom: 20px;">
      Protect your account with Two-Factor Authentication.
    </p>
    
    <div class="actions">
      <%= link_to 'Set up Google Authenticator', setup_google_auth_user_mfa_sessions_path, method: :get, class: "btn btn-primary btn-lg btn-block rounded-pill" %>
      <%= link_to 'Set up Email Verification', setup_email_auth_user_mfa_sessions_path, method: :get, class: "btn btn-secondary btn-lg btn-block rounded-pill" %>
    </div>
  </div>
</body>
