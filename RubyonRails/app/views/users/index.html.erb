<body id="defBG" class="bg-white center">
  <div id="whiteGrad" class="container p-5 my-3 w-100 bg-white border-0">
    <!-- Heading for clients page -->
    <h1 class="display-4" style='padding-bottom:20px'>Users</h1>

    <div  class="row mb-3">
      <!-- Search bar -->
      <div class="col-md-6">
        <%= form_with url: users_path, method: :get, local: true, class: 'form-inline' do %>
          <%= text_field_tag :query, params[:query], class: 'form-control mr-sm-2 rounded-pill', placeholder: 'Search users' %>
          <%= submit_tag "Search", class: "btn rounded-pill btn-outline-info my-2 my-sm-0" %>
        <% end %>
      </div>

      <!-- Display local moderator unique generated code. -->
      <% if current_user.local_moderator? %>
        <div class="col-md-6 text-right">
          <div class="clipboard-container-moderator">
            <label for="copy-target"></label><input
              type="text"
              class="moderator-code-input"
              id="copy-target"
              value="<%= current_user.moderator_code %>"
              readonly />

            <button
              id="copy-button"
              type="button"
              class="copy-button-moderator">
              Copy
            </button>
          </div>
        </div>
      <% end %>

    </div>
    <% if @users.any? { |user| user.local_moderator? || user.global_moderator? } %>
      <h2>Moderators</h2>
      <table>
        <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <!-- New column for the unique code -->
<!--          <th>Unique Code</th>-->
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <% if user.local_moderator? || user.global_moderator? %>
            <tr>
              <td><%= user.fname %></td>
              <td><%= user.lname %></td>
              <td><%= user.email %></td>

<!--              TODO: MAY OR MAY NOT USE THIS, IT WILL DISPLAY MODERATOR CODE FOR REGULARS UNDER A LOCAL MOD-->
              <%# if user.local_moderator? %>
                <!-- Display the unique code for local moderators -->
<!--                <td><%#= user.moderator_code %></td>-->
              <%# else %>
                <!-- Placeholder for global moderators -->
<!--                <td>N/A</td>-->
              <%# end %>
            </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</body>
