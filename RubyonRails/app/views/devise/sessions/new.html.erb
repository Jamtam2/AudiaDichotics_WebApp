<style>
  .panel {
    height: 100%;
    width: 50%;
    position: fixed;
    z-index: 1;
    top: 0;
    overflow-x: hidden;
    padding-top: 20px;
}

.left {
    left: 0;
    
}

.right {
    right: 0;
    background-color: rgba(46,131,204,1);
    color: white;
}

.blue-background {
    background-color: rgba(46,131,204,1);
}

.center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    width: 100%;
}

.submit-button {
    background-color: #e0202c;
}

.submit-button:hover {
    background-color: #bd1a25;
}

.logo {
    position: absolute;
    top: 30px; 
    left: 30px; 
    z-index: 2;
}

.logo-image {
    width: 150px; 
    height: auto;
}

.logo-background {
    background-color: white;
    border-radius: 20%;
}

.label-medium {
    font-size: 25px;
}

.forgot-padding {
    padding-bottom: 15px;
}

a.forgot-password {
    font-size: 20px;
    text-decoration: underline;
    color: #e0202c;
}

a.forgot-password:hover {
    color: #bd1a25;
}

.label-small {
    font-size: 20px;
    margin-top: 8px;
}

.checkbox-padding {
    margin: 10px;
    margin-bottom: 12px;
}

.flash-messages {
    position: relative;
    z-index: 100;
    padding: 0px;
    margin: 0px;
}

.alert-success {
    border: none;
}

.terms-of-service {
    display: flex;
    justify-content: center;
    gap: 10px;
}

#tos-checkbox {
    align-self: center;
    margin-bottom: 18px;
}

.btn-link2 {
    color: #e0202c;
    text-decoration: underline;
}

.btn-link2:hover {
    color: #bd1a25;
    text-decoration: underline;
}

.simplified {
    text-align: center;
    display: inline-block;
    font-weight: 300;
    vertical-align: middle;
    padding: 0.375rem 0.5rem;
    line-height: 1.5;
    background: none;
}

.simplified:hover {
    background-color: inherit;
}

.rounded-corner {
    border-radius: 5%;
}

.text-padding {
    padding-top: 5%;
    padding-bottom: 5%;
}

.center-align {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 30%;
}

.back-arrow {
    width: 50px;
    height: auto;
}
</style>

<div>
  <div class="panel left">
    <div class="logo">
      <%= link_to new_user_session_path do %>
        <%= image_tag "AUDIA_RGB_LOGO_w.png", class: "logo-image" %>
      <% end %>
    </div>
    <div class="center">
      <div class="container my-3 w-75">
        <h2 class= "display-2", style= 'padding-bottom:20px' ><strong>Don't Have an Account?</strong></h2> 
        <%= link_to "Sign Up Here", new_user_registration_path, class: "btn btn-primary btn-lg btn-block rounded-pill" %>
        <h3 style="padding: 10px;">or<h3>
        <%= link_to "Learn More Here", about_path, class: "btn btn-primary btn-lg btn-block rounded-pill"%>
      </div>
    </div>
  </div>

  <div class="panel right">
    <div class="center">
      <div class="container my-3 w-75">
        <h2 class= "display-1", style= 'padding-bottom:20px' ><strong>Log in</strong></h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field", style= 'padding-bottom:20px'>
            <%= f.label :email, class: 'label-medium' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control form-control-lg rounded-pill", style: ' padding:10px;' %>
          </div>

          <div class="field">
            <%= f.label :password, class:'label-medium' %><br />
            <%= f.password_field :password, autocomplete: "current-password",class: "form-control form-control-lg rounded-pill", style: ' padding:10px;' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me, class: 'checkbox-padding' %>
              <%= f.label :remember_me, class: 'label-small' %>
            </div>
          <% end %>

          <div class="forgot-padding">
            <%= link_to "Forgot your password?", new_user_password_path, class: "forgot-password" %>
          </div>

          <div class="actions" style= 'padding-bottom:20px'>
            <%= f.submit "Log in", class: 'btn submit-button btn-primary btn-lg btn-block rounded-pill' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
