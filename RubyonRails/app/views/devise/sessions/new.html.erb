
<div class="container p-5 my-3 w-50 border rounded">
<h2 class= "display-1", style= 'padding-bottom:20px' ><strong>Log in</strong></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name***REMOVED******REMOVED*** do |f| %>
  <div class="field", style= 'padding-bottom:20px'>
    <%= f.label :email, class: 'display-6' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: ' padding:10px;' %>
  </div>

  <div class="field">
    <%= f.label :password, class:'display-6' %><br />
    <%= f.password_field :password, autocomplete: "current-password", style: ' padding:10px;' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions" style= 'padding-bottom:20px'>
    <%= f.submit "Log in", class: 'btn btn-primary btn-lg btn-block' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
