<h1>Edit Tenant</h1>

<%= form_with model: @tenant, local: true do |form| %>
  <div class="form-group">
    <%= form.label :membership_expiration %>
    <%= form.datetime_select :membership_expiration %>
  </div>

  <div class="form-group">
    <%= form.label :test_limit %>
    <%= form.number_field :test_limit, min: 0 %> <!-- Restricting test limit to 0 or greater -->
  </div>

  <div class="form-group">
    <%= form.submit "Update Tenant", class: "btn btn-primary" %>
  </div>
<% end %>
